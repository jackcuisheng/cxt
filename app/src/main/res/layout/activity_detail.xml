<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mGameView"
    >
    <include
        layout="@layout/layout_top"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/vin"
                    />
                <TextView
                    android:id="@+id/tv_vin"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/carNum"
                    />

                <TextView
                    android:id="@+id/tv_carNum"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/car_owner_name"
                    />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/car_owner_phone"
                    />

                <TextView
                    android:id="@+id/tv_phoneNum"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_money_num"
                    />

                <TextView
                    android:id="@+id/tv_loanMoney"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_money_months"
                    />

                <TextView
                    android:id="@+id/tv_loanMonth"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_money_repay"
                    />

                <TextView
                    android:id="@+id/tv_repayMonth"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/car_location"
                    />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_state"
                    />

                <TextView
                    android:id="@+id/tv_alarm_state"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center"
                >
                <CheckBox
                    android:id="@+id/ck_defend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:text="@string/defend_state"
                    android:clickable="false"
                    />
                <CheckBox
                    android:id="@+id/ck_control"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_height="wrap_content"
                    android:text="@string/control_state"
                    android:clickable="false"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_image1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/load"
                    android:layout_gravity="center"
                    />
                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_image2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/load"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"

                >
                <Button
                    android:id="@+id/btn_defend"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:layout_weight="2.5"
                    android:text="@string/defend"
                    style="?android:attr/buttonStyleSmall"
                    android:background="@drawable/view_bg"
                    android:backgroundTint="@color/btn_red"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_control"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:text="@string/control"
                    android:layout_weight="2.5"
                    android:background="@drawable/view_bg"
                    android:backgroundTint="@color/purple"
                    android:textColor="@color/white"
                    style="?android:attr/buttonStyleSmall"
                    />

                <Button
                    android:id="@+id/btn_track"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/view_bg"
                    android:backgroundTint="@color/btn_orange"
                    style="?android:attr/buttonStyleSmall"
                    android:textColor="@color/white"
                    android:text="@string/track"
                    />

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/view_bg"
                    android:backgroundTint="@color/top_layout"
                    style="?android:attr/buttonStyleSmall"
                    android:text="@string/search"
                    android:textColor="@color/white"
                    android:layout_weight="2.5"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/expanded_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:visibility="invisible"
                />

        </LinearLayout>
    </FrameLayout>



</LinearLayout>






