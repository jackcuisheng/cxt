<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_all"
    >
    <include
        layout="@layout/layout_top"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.amap.api.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textAlignment="center"
                    android:gravity="center"
                    android:id="@+id/tv_my_location"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/view_noborder"
                    android:text="@string/my_location"
                    />
                <TextView
                    android:textAlignment="center"
                    android:gravity="center"
                    android:id="@+id/tv_device_location"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/view_no_left_border"
                    android:text="@string/device_location"
                    />
                <TextView
                    android:textAlignment="center"
                    android:gravity="center"
                    android:id="@+id/tv_one_key"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/view_no_left_border"
                    android:text="@string/one_key_fence"
                    />
                <TextView
                    android:textAlignment="center"
                    android:gravity="center"
                    android:id="@+id/tv_more"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/view_no_left_border"
                    android:text="@string/more_menu"
                    />
            </LinearLayout>
        </LinearLayout>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            layout="@layout/more_menu"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>
